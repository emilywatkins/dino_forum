<h1><%= @discussion.description %></h1>

<% if @discussion.posts.any? %>
  <h4>Here are the posts for this discussion</h4>
  <ul>
    <% @discussion.posts.each do |post| %>
      <li>
        <%= post.body %> |
        <%= link_to "Edit", edit_discussion_post_path(@discussion, post) %> |
        <%= link_to "Delete", discussion_post_path(@discussion, post),
          :data => {:confirm => "Are you sure?",
          :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no posts yet!</p>
<% end %>

<p><%= link_to "Add a post", new_discussion_post_path(@discussion) %></p>
<p><%= link_to "Return to discussions", topic_path(@topic) %></p>
